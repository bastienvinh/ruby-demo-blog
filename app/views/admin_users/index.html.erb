<div class="sections index">
  <h2>Sections</h2>

  <%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
  <%= link_to("Add New User", new_admin_user_path, :class => 'action new') %>

  <table class="listing" summary="Section list">
    <tr class="header">
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Username</th>
    </tr>
    <% @admin_users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.username %></td>
      <td class="actions">
        <%= link_to("Edit", edit_admin_user_path(user), :class => 'action edit') %>
        <%= link_to("Delete", delete_admin_user_path(user), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
